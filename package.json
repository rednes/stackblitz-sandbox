{
  "name": "stackblitz-sandbox",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "run-p backend frontend",
    "frontend": "npm run -w frontend dev",
    "backend": "npm run -w backend dev",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && prettier 'src/**/*.{ts,tsx,css}'",
    "lint:fix": "eslint . --fix --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && prettier --write 'src/**/*.{ts,tsx,css}'",
    "preview": "vite preview"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
